{% extends 'base.html.twig' %}

{% block body2 %}

    {{ form_start(form)}}

    <div class="form-row align-items-end" >
        <div class="col">
            {{ form_row(form.nom) }}
        </div>

        <div class="col">
            <div class="form-group">
                <button type="submit" class="btn btn-success">Rechercher</button>
            </div>
        </div>
    </div>
    {{ form_end(form)}}

    {% if events %}
        <table id="events" class="table table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Date_debut</th>
                <th>Date_fin</th>
                <th>Description</th>
                <th>Lieu</th>
                <th>Prix</th>
                <th>Nb_places</th>
                <th>Type</th>
                <th>Nb_signal</th>
                <th>Nom_image</th>
                <th>actions</th>
            </tr>


            </thead>
            <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.id }}</td>
                    <td>{{ event.Nom }}</td>
                    <td>{{ event.DateDebut ? event.DateDebut|date('Y-m-d') : '' }}</td>
                    <td>{{ event.dateFin ? event.dateFin|date('Y-m-d') : '' }}</td>
                    <td>{{ event.description }}</td>
                    <td>{{ event.lieu }}</td>
                    <td>{{ event.prix }}</td>
                    <td>{{ event.nbPlaces }}</td>
                    <td>{{ event.type }}</td>
                    <td>{{ event.nbSignal }}</td>
                    <td>{{ event.nomImage }}</td>


                    <td>

                        <a href="{{ path('event_show', {'id': event.id}) }}">show</a>
                        <a href="{{ path('event_edit', {'id': event.id}) }}">edit</a>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucun Event</p>
    {% endif %}
{% endblock %}


